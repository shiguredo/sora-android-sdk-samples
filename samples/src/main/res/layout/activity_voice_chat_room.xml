<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- チャンネル名表示 -->
    <TextView
        android:id="@+id/channelNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Channel Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#2D2D2D"
        android:padding="8dp"
        android:elevation="4dp" />

    <!-- 接続状態表示 -->
    <TextView
        android:id="@+id/stateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/channelNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="CONNECTING..."
        android:textColor="#4CAF50"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- 音量表示タイトル -->
    <TextView
        android:id="@+id/volumeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stateText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="参加者音量レベル"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 音量表示リスト -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/volumeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/volumeTitle"
        android:layout_above="@id/controlContainer"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="#2D2D2D"
        android:clipToPadding="false"
        android:padding="8dp"
        android:elevation="2dp" />

    <!-- コントロールボタン群 -->
    <LinearLayout
        android:id="@+id/controlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#2D2D2D"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- 閉じるボタン -->
        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/close_button_background"
            android:contentDescription="Close"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_white_48dp"
            android:elevation="2dp" />

    </LinearLayout>

</RelativeLayout>
